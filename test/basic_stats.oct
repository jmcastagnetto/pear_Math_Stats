#
# Octave script to calculate basic statistics of a data vector
#
# $Id$
#

disp("Statistics using octave")
disp("-----------------------\n")
data = [2,2.3,4.5,2,2,3.2,5.3,3,4,5,1,6]
disp(sprintf("mean = %.14f", mean(data)))
disp(sprintf("geometric mean = %.14f", mean(data, 'g')))
disp(sprintf("harmonic mean = %.14f", mean(data, 'h')))
disp(sprintf("median = %.14f", median(data)))
disp(sprintf("stDev = %.14f", std(data)))
disp(sprintf("variance = %.14f", var(data)))
disp(sprintf("kurtosis = %.14f", kurtosis(data)))
disp(sprintf("skewness = %.14f", skewness(data)))
disp(sprintf("range = %.14f", range(data)))
disp(sprintf("moment(2) = %.14f", moment(data, 2)))
disp(sprintf("moment(3) = %.14f", moment(data, 3)))
disp(sprintf("moment(4) = %.14f", moment(data, 4)))
disp(sprintf("interquartile range = %.14f", iqr(data)))
disp(sprintf("mean square = %.14f", meansq(data)))
s = statistics(data)
disp(sprintf("min = %.14f", s(1)))
disp(sprintf("quartile(1) = %.14f", s(2)))
disp(sprintf("median (quartile(2)) = %.14f", s(3)))
disp(sprintf("quartile(3) = %.14f", s(4)))
disp(sprintf("max = %.14f", s(5)))
disp(sprintf("mean = %.14f", s(6)))
disp(sprintf("std dev = %.14f", s(7)))
disp(sprintf("skewness = %.14f", s(8)))
disp(sprintf("kurtosis = %.14f", s(9)))

disp("\n* Studentize the data")
newdata = studentize(data)
s = statistics(newdata)
disp(sprintf("min = %.14f", s(1)))
disp(sprintf("quartile(1) = %.14f", s(2)))
disp(sprintf("median (quartile(2)) = %.14f", s(3)))
disp(sprintf("quartile(3) = %.14f", s(4)))
disp(sprintf("max = %.14f", s(5)))
disp(sprintf("mean = %.14f", s(6)))
disp(sprintf("std dev = %.14f", s(7)))
disp(sprintf("skewness = %.14f", s(8)))
disp(sprintf("kurtosis = %.14f", s(9)))

disp("\n* Center the data")
newdata = center(data)
s = statistics(newdata)
disp(sprintf("min = %.14f", s(1)))
disp(sprintf("quartile(1) = %.14f", s(2)))
disp(sprintf("median (quartile(2)) = %.14f", s(3)))
disp(sprintf("quartile(3) = %.14f", s(4)))
disp(sprintf("max = %.14f", s(5)))
disp(sprintf("mean = %.14f", s(6)))
disp(sprintf("std dev = %.14f", s(7)))
disp(sprintf("skewness = %.14f", s(8)))
disp(sprintf("kurtosis = %.14f", s(9)))
